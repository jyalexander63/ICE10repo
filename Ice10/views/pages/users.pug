// views/users.pug
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Users
  body
    h1 Users
    table
      thead
        tr
          th First Name
          th Last Name
          th Email
          th Age
          th Created At
          th Active
          th Friends
          th Address
          // Add more headers as needed
      tbody
        each user in users
          tr
            td= user.firstName
            td= user.lastName
            td= user.email
            td= user.age
            td= user.createdAt
            td= user.isActive
            td= user.friends
            td= user.address
            // Add more cells as needed
